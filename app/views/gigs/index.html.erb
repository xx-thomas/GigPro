<div class="center jumbotron">
<% if !logged_in? %>
	<h1> Welcome to Gig Pro!</h1>
	<p> Please login to use Gig Pro! </p>
<% else %>
	<% provide(:title, "Gigs") %>
	<h1><%=t(:gigs) %></h1>
	<%= form_tag('/gigs', method: :get) do %>
		<%= text_field_tag :search, params[:search], placeholder: "Search gigs" %>
		<%= submit_tag "Search" %>
	  <% end %>
	<ul>
		<% @gigs.each do |gig| %>
			<li style="list-style-type: none;">
				<%=t(:gig)%>: <%= link_to gig.title, gig %>, 
				<%=t(:location)%>: <%= gig.location %>,
				<%=t(:payment)%>: <%= gig.payment %>,
				<%=t(:deadline)%>:  <%= gig.deadline %>
			</li>
		<% end %>
	</ul>
	<p></p>
	<%= link_to t(:new_gig), new_gig_path, class: "btn btn-primary btn-lg" %>
	</div>
	<%end %>