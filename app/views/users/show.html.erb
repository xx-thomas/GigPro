<% provide(:title, t(:profile)) %>
<div class="center jumbotron">
  <h1><%=t(:profile)%> </h1>
  <p><%=t(:name)%>: <%= @user.name %></p>
  <p><%=t(:email)%>: <%= @user.email %></p>
  <p><%=t(:rating)%>: <%= @user.worker_rating %></p>
  <p><%=t(:balance)%>: <%= @user.balance %></p>

  <br>
  <a href="/ratings">Write a review for <%=@user.name %></a>
</div>