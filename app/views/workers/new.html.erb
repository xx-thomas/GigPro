<h1>New Worker</h1>

<%= form_with model: @worker do |form| %>
	<div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
		<% @worker.errors.full_messages_for(:name).each do |message| %>
			<div><%= message %></div>
		<% end %>
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
		<% @worker.errors.full_messages_for(:location).each do |message| %>
			<div><%= message %></div>
		<% end %>
  </div>

  <div>
    <%= form.label :number %><br>
    <%= form.text_field :number %>
  </div>

  <div>
    <%= form.label :language_preference %><br>
    <%= form.text_field :language_preference %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
