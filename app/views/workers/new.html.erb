<h1><%=t(:new_worker)%></h1>

<%= form_with model: @worker do |form| %>
	<div>
    <%= form.label t(:name) %><br>
    <%= form.text_field :name %>
		<% @worker.errors.full_messages_for(:name).each do |message| %>
			<div><%= message %></div>
		<% end %>
  </div>

  <div>
    <%= form.label t(:location) %><br>
    <%= form.text_field :location %>
		<% @worker.errors.full_messages_for(:location).each do |message| %>
			<div><%= message %></div>
		<% end %>
  </div>

  <div>
    <%= form.label t(:number) %><br>
    <%= form.text_field :number %>
  </div>

  <div>
    <%= form.label t(:language_preference) %><br>
    <%= form.text_field :language_preference %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
